{
  "name": "typescript-jest-starter",
  "version": "0.0.1",
  "license": "MIT",
  "description": "A demo package for Total TypeScript",
  "keywords": [
    "demo",
    "typescript",
    "Jest"
  ],
  "homepage": "https://github.com/maratib/typescript-jest-starter",
  "author": {
    "name": "Maratib Ali Khan",
    "email": "maratib@gmail.com",
    "url": "https://maratib.github.io"
  },
  "bugs": {
    "url": "https://github.com/maratib/typescript-jest-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:maratib/typescript-jest-starter.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error",
      "capitalized-comments": "off"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "pretest": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "pub": "npm publish --access public",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.16",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-config-xo": "^0.46.0",
    "eslint-plugin-prettier": "^5.2.5",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0"
  }
}
